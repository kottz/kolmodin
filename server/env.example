# KOLMODIN__TWITCH__IRC_SERVER_URL=localhost:6667

# ============================================================
# SECRETS
# ============================================================

KOLMODIN__SERVER__ADMIN_API_KEY=change-me

KOLMODIN__TWITCH__CLIENT_ID=your-twitch-client-id
KOLMODIN__TWITCH__CLIENT_SECRET=your-twitch-client-secret

